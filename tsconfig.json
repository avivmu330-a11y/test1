{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@renderer/*": ["src/renderer/*"],
      "@types": ["src/types.ts"]
    }
  },
  "include": ["src", "tests", "vite.config.ts", "vite.preload.config.ts"],
  "exclude": ["dist", "dist-electron"]
}
